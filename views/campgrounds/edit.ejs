
    <% layout('layouts/boilerplate')%>
    <h1>Edit Campground</h1>
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
        <label for="campName">Campground Name</label>
        <input id="campName" type="text" value="<%= campground.title %>" name="campground[title]">
        <label for="CampLocation">Campground Location</label>
        <input type="text" name="campground[location]" id="CampLocation" value="<%= campground.location%>">
        <button>Update Campground</button>
    </form>
    <a href="/campgrounds/<%=campground._id%>">Back to Campground</a>
